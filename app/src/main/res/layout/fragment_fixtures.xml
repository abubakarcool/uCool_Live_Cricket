<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Fragments.FixturesFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclefixtureslayout"
        android:orientation="vertical"
        android:layout_below="@+id/lin78">
        <TextView
            android:id="@+id/fixturesResults11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginHorizontal="22dp"
            android:text="Fixtures &amp; Results this Week"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20dp">
        </TextView>
        <View
            android:id="@+id/fixturesResultsUnderline11"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bottom_line">
        </View>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fixturesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="5dp">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>